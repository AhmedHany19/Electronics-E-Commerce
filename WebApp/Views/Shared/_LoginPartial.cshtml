@using Domain.Entity;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul >
@if (SignInManager.IsSignedIn(User))
{
    <li >
            <a class="nav-link text-white" title="Manage">Hello @User.Identity?.Name</a>
    </li>
    <li >
            <form class="form-inline" asp-area="Customer" asp-action="Logout" asp-controller="Users" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Customer" })">
            <button  type="submit" class="nav-link btn btn-link text-white-50">Logout</button>
        </form>
    </li>
}
else
{
    <li >
         <a class="nav-link text-white" asp-area="Customer" asp-action="Register" asp-controller="Users">Register</a>
    </li>
    <li >
        <a class="nav-link text-white" asp-area="Customer" asp-action="Login" asp-controller="Users">Login</a>
    </li>
}
</ul>
